print("Q3")
def table(n,i):
  print (n*i)
  i=i+1
  if i<=10:
    print(table(n,i))
print(table(12,1))
print("--------------------")
#Q4.
print("Q4")
def power(base,exp):
    if(exp==1):
        return(base)
    if(exp!=1):
        return(base*power(base,exp-1))
base=int(input("Enter base: "))
exp=int(input("Enter exponential value: "))
print("Result:",power(base,exp))
print("-----------------------")
#Q5.
print("Q5")
number=int(input("enter the number"))
def fact(number) :
    if number<=1:
        return 1
    else:
        return number*fact(number-1)
print("the factorial of number would be",fact(number))
div={number:fact}
