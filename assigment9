#Q2.
print("Q2")
def perfect(number):
    sum=0
    for  i in range(1,number):
        sum+=1
        if(number%i==0):
            return True
        else:
            return False
    for i in range(1,1000):
        if perfect(i):
            print(i)
            print("-----------------")     
